<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/bg_image_main">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/basic"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/Image_char" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shop"
        android:id="@+id/goShopButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/Image_char"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="153dp"
        android:layout_above="@+id/Image_char"
        android:layout_toRightOf="@+id/Image_char" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loveText"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/moneyText"
        android:layout_alignStart="@+id/moneyText"
        android:layout_marginBottom="12dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="28dp"
        android:id="@+id/moneyText"
        android:layout_above="@+id/loveText"
        android:layout_toLeftOf="@+id/Image_char"
        android:layout_toStartOf="@+id/Image_char" />

</RelativeLayout>
